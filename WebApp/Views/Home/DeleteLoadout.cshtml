@using WebApp.Models
@model HeroLoadout
@{
    ViewData["Title"] = "Delete Hero Loadout";
}
<div class="max-w-3xl mx-auto bg-white p-10 rounded-lg shadow-lg mt-12 space-y-6">
    <h1 class="text-4xl font-semibold text-center text-gray-900 mb-6">@ViewData["Title"]</h1>
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger bg-red-100 text-red-700 p-4 rounded-md">
            @ViewData["Error"]
        </div>
    }
    @if (ViewData["Success"] != null)
    {
        <div class="alert alert-success bg-green-100 text-green-700 p-4 rounded-md">
            @ViewData["Success"]
        </div>
    }
    <div class="card shadow-md rounded-lg border border-gray-200">
        <div class="card-header bg-gray-900 text-white p-6 text-center text-xl font-semibold">
            Delete Hero Loadout
        </div>
        <div class="card-body p-8">
            <p class="text-lg text-gray-700 mb-4">Enter the ID of the hero loadout you want to delete:</p>

            <form method="post" action="@Url.Action("DeleteLoadout")" class="space-y-6">
                <div class="mb-4">
                    <label for="id" class="block text-sm font-medium text-gray-700">Hero Loadout ID</label>
                    <input type="number" id="id" name="id" class="form-control mt-2 p-3 border border-gray-300 rounded-md w-full focus:ring-2 focus:ring-blue-500 focus:outline-none text-black" required />
                </div>
                <button type="submit" class="btn btn-danger w-full bg-red-600 hover:bg-red-700 text-white p-3 rounded-md transition duration-200 ease-in-out transform hover:scale-105">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
